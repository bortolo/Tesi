\defbeamertemplate*{footline}{MY-infolines theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.23\paperwidth,ht=3.25ex,right]{logo in head/foot}%
  \includegraphics[height=3.25ex,wd=0.1\paperwidth]{/loghi/politecnicoLOGO}
  \quad
  \includegraphics[height=3.25ex,wd=0.13\paperwidth]{/loghi/LogoMicron}  
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.32\paperwidth,dp=1ex, ht=3.25ex,center]{title in head/foot}%
 \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=0.45\paperwidth,dp=1ex,ht=3.25ex,right]{date in head/foot}%
    \usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
  \end{beamercolorbox}}%
  \vskip0pt%
}

